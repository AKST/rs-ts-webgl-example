{
  "install": {
    "include": [
      "^package\\.json$",
      "^Cargo\\.toml$",
      "^\\.env$"
    ]
  },
  "restart": {
    "exclude": [
      "^public/",
      "^dist/"
    ],
    "include": [
      "\\.sh",
      "\\.json",
      "\\.rs",
      "\\.css",
      "\\.js"
    ]
  },
  "throttle": 100
}
